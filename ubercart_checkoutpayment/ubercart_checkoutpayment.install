      'live' => array(
        'description' => 'True when notification originated from the live payment systems.',
        'type' => 'varchar',
        'length' => '255',
        'not null' => TRUE,
        'default' => '',
      ),
      'event_code' => array(
        'description' => 'The event type of the notification.',
        'type' => 'varchar',
        'length' => '255',
        'not null' => TRUE,
        'default' => '',
      ),
      'psp_reference' => array(
        'description' => 'The reference assigned to the payment or modification.',
        'type' => 'varchar',
        'length' => '255',
        'not null' => TRUE,
        'default' => '',
      ),
      'original_reference' => array(
        'description' => 'The reference originally assigned to the authorisation. For a payment it will be blank.',
        'type' => 'varchar',
        'length' => '255',
        'not null' => TRUE,
        'default' => '',
      ),
      'merchant_reference' => array(
        'description' => 'Our reference: the order ID',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
      ),
      'merchant_account_code' => array(
        'description' => 'The merchant account the payment or modification was processed with.',
        'type' => 'varchar',
        'length' => '255',
        'not null' => TRUE,
        'default' => '',
      ),
      'event_date' => array(
        'description' => 'The time the event was generated.',
        'type' => 'varchar',
        'length' => '255',
        'not null' => TRUE,
        'default' => '',
      ),
      'success' => array(
        'description' => 'Whether or not the event succeeded.',
        'type' => 'varchar',
        'length' => '255',
        'not null' => TRUE,
        'default' => '',
      ),
