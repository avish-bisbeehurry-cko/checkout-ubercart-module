  return $schema;
}

/**
 * Implements hook_uninstall().
 */
function ubercart_checkoutpayment_uninstall() {
  db_delete('variable')
    ->condition('name', 'ubercart_checkoutpayment_%', 'LIKE')
    ->execute();
}

